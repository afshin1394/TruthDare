<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/introductionFragment">
    <fragment
        android:id="@+id/introductionFragment"
        android:name="com.afshin.truthordare.MVVM.UI.Fragments.IntroductionFragment"
        android:label="fragment_introduction"
        tools:layout="@layout/fragment_introduction" >
        <action
            android:id="@+id/action_introductionFragment_to_bulidGameFragment"
            app:destination="@id/bulidGameFragment" />
    </fragment>
    <fragment
        android:id="@+id/bulidGameFragment"
        android:name="com.afshin.truthordare.MVVM.UI.Fragments.BuildGameFragment"
        android:label="fragment_bulid_game"
        tools:layout="@layout/fragment_bulid_game" >
        <argument
            android:name="EditPlayers"
            app:argType="boolean" />
        <action
            android:id="@+id/action_bulidGameFragment_to_gameMainFragment"
            app:destination="@id/gameMainFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameMainFragment"
        android:name="com.afshin.truthordare.MVVM.UI.Fragments.GameMainFragment"
        android:label="fragment_game_main"
        tools:layout="@layout/fragment_game_main" >
        <argument
            android:name="challengers"
            app:argType="com.afshin.truthordare.Challenger" />
        <action
            android:id="@+id/action_gameMainFragment_to_gameChoiceFragment"
            app:destination="@id/gameChoiceFragment" />
        <action
            android:id="@+id/action_gameMainFragment_to_bulidGameFragment"
            app:destination="@id/bulidGameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameChoiceFragment"
        android:name="com.afshin.truthordare.MVVM.UI.Fragments.GameChoiceFragment"
        android:label="fragment_game_choice"
        tools:layout="@layout/fragment_game_choice" >
        <action
            android:id="@+id/action_gameChoiceFragment_to_actionsFragment"
            app:destination="@id/actionsFragment" />

    </fragment>
    <fragment
        android:id="@+id/actionsFragment"
        android:name="com.afshin.truthordare.MVVM.UI.Fragments.ActionsFragment"
        android:label="fragment_action"
        tools:layout="@layout/fragment_action" />
</navigation>