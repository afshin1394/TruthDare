            android:rotation="45"
            android:id="@+id/fabChooseBottle"
            android:src="@drawable/blue_bottle"
            android:scaleType="centerInside"
            fab:fab_size="normal"
            fab:fab_colorNormal="@color/mediumPurple"
            fab:fab_colorPressed="@color/KSUPurple"
            fab:fab_label="@string/chooseBottle"
 />
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="@dimen/_20sdp"
