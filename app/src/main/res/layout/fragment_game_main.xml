    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="-110dp"
        android:layout_marginRight="-110dp"
        android:elevation="@dimen/_2sdp"
        android:rotation="225"
        android:src="@drawable/mon_yellow" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-160dp"
        android:elevation="@dimen/_2sdp"
        android:rotation="90"
        android:src="@drawable/mon_pink" />

    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginBottom="-130dp"
        android:elevation="@dimen/_2sdp"
        android:rotation="0"
        android:src="@drawable/mon_green" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginBottom="-130dp"
        android:elevation="@dimen/_2sdp"
        android:rotation="0"
        android:src="@drawable/mon_red" />

    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginBottom="-130dp"
        android:elevation="@dimen/_2sdp"
        android:rotation="0"
        android:src="@drawable/mon_red" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl">
        <com.afshin.truthordare.CustomViews.BottleView
            android:id="@+id/CV_bottle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.afshin.truthordare.CustomViews.TruthDareView
            android:id="@+id/CV_truthOrDare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/specPurpleLight" />


        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/fabMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="0dp"
            android:scaleType="centerInside"
            fab:menu_animationDelayPerItem="50"
            fab:menu_backgroundColor="@android:color/transparent"
            fab:menu_buttonSpacing="0dp"
            fab:menu_colorNormal="@color/mediumPurple"
            fab:menu_colorPressed="@color/KSUPurple"
            fab:menu_colorRipple="#99FFFFFF"
            fab:menu_fab_size="normal"
            fab:menu_icon="@drawable/ic_menu"
            fab:menu_labels_colorNormal="@color/KSUPurple"
            fab:menu_labels_colorPressed="@color/mediumPurple"
            fab:menu_labels_colorRipple="@color/mauve"
            fab:menu_labels_ellipsize="none"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
            fab:menu_labels_margin="0dp"
            fab:menu_labels_maxLines="-1"
            fab:menu_labels_padding="8dp"
            fab:menu_labels_paddingBottom="4dp"
            fab:menu_labels_paddingLeft="8dp"
            fab:menu_labels_paddingRight="8dp"
            fab:menu_labels_paddingTop="4dp"
            fab:menu_labels_position="right"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_singleLine="false"
            fab:menu_labels_textColor="@color/strongWhite"
            fab:menu_labels_textSize="14sp"
            fab:menu_openDirection="up"
            fab:menu_shadowColor="#66000000"
            fab:menu_shadowRadius="4dp"
            fab:menu_shadowXOffset="1dp"
            fab:menu_shadowYOffset="3dp"
            fab:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabChooseBottle"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:scaleType="centerInside"
                android:src="@drawable/simple_bottle_fab"
                fab:fab_colorNormal="#671507"
                fab:fab_colorPressed="@color/KSUPurple"
                fab:fab_label="@string/chooseBottle"
                fab:fab_size="normal" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabEditPlayer"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:scaleType="centerInside"
                android:src="@drawable/add_player_fab"
                fab:fab_colorNormal="@color/mediumPurple"
                fab:fab_colorPressed="@color/KSUPurple"
                fab:fab_label="@string/edit_player"
                fab:fab_size="normal" />
        </com.github.clans.fab.FloatingActionMenu>

        <include layout="@layout/bottom_sheet" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>
