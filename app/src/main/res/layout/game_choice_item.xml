<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CONS_TruthDare"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:background="@drawable/card_choice_style"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:background="@color/specPurpleLight"
                android:id="@+id/CONS_TruthDareInner"
                >
                <ImageView
                    android:id="@+id/IMG_Choice"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    app:layout_constraintBottom_toTopOf="@id/TV_choice"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/truth"
                    android:padding="@dimen/_40sdp"
                    />
                <TextView
                    android:id="@+id/TV_choice"
                    android:background="@drawable/button_choice_style"
                    android:textColor="#fff"
                    android:text="@string/Truth"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:textSize="@dimen/_20sdp"

/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>
