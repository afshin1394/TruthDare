<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/shape_dialog_alarm">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_3sdp"
        app:srcCompat="@drawable/ic_question" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="@string/ImageUpload"
        android:textColor="@color/white"

        />

    <TextView
        android:id="@+id/text_tittle_show_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:paddingRight="4dp"
        android:text="آیا میخواهید تغییرات ذخیره شود ؟"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/offlineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_tittle_show_dialog"
        android:text="در حالت آفلاین، تغییرات در پایگاه داده ذخیره میشود و بعد از اتصال به اینترنت به سرور ارسال میشود."
        android:textColor="@color/flame"
        android:textSize="10sp"
        android:visibility="gone" />

    <LinearLayout

        android:id="@+id/lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="@dimen/_280sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"

        >

        <androidx.cardview.widget.CardView
            android:id="@+id/camera_Btn"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            app:cardBackgroundColor="@color/mauve"
            app:cardCornerRadius="@dimen/_15sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:gravity="center"
                android:text="@string/Camera"
                android:textAlignment="gravity"
                android:textColor="@color/blastOfBronze"
                android:textSize="@dimen/_11ssp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/gallery_Btn"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            app:cardBackgroundColor="@color/mauve"
            app:cardCornerRadius="@dimen/_15sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:gravity="center"
                android:text="انتخاب از گالری"
                android:textAlignment="gravity"
                android:textColor="@color/blastOfBronze"
                android:textSize="@dimen/_11ssp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>